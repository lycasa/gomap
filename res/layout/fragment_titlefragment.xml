<?xml version="1.0" encoding="utf-8"?>
<!-- 显示头部的搜索提示 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/demand_item_bg"
    android:orientation="horizontal" >

    <!-- 搜索图标 -->

    <ImageButton
        android:id="@+id/ib_search_normalicon"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="@drawable/searchicon"
         />

    <!-- 中间搜索提示文字 -->

    <TextView
        android:id="@+id/tv_search_tip"
         android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        android:text="@string/tv_search_tip" />
    
    <!-- 语音搜索图标 -->
    <ImageButton
        android:id="@+id/ib_search_ttsicon"
          android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
         android:background="@drawable/common_icon_searchbox_voice_pressed"
         />

</LinearLayout>